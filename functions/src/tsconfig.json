{
	"compilerOptions": {
		"module": "commonjs",
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"outDir": "lib",
		"sourceMap": true,
		"strict": true,
		"target": "ES2015",
		"downlevelIteration": true,
		"esModuleInterop": true,
		"resolveJsonModule": true
	},
	"compileOnSave": true,
	"include": [
		"src"
	]
}